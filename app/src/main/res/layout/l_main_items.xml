<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layMain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="6dp"
        android:gravity="center"
        android:orientation="vertical">


            <LinearLayout
                android:id="@+id/imgSize"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/imgImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:src="@drawable/charg_online" />
            </LinearLayout>



        <ir.jahanmir.aspa.component.PersianTextViewNormal
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:lines="1"
            android:text="test"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/layCount"
        android:layout_width="@dimen/size_layBack_notify_child_slide"
        android:layout_height="@dimen/size_layBack_notify_child_slide"
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|left"
            android:background="@drawable/ic_notify_count" />

        <ir.jahanmir.aspa.component.PersianTextViewThin
            android:id="@+id/txtCount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="6"
            android:textColor="@color/white"
            android:typeface="serif" />
    </FrameLayout>


    <ImageView
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:layout_gravity="right"
        android:background="#334c62" />

</FrameLayout>
