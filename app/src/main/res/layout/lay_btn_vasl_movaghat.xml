<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:orientation="horizontal">


    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/layBtnVaslMovaghat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/color_back_btn_orange"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_gravity="center"
                android:src="@drawable/button_image"
                android:layout_margin="@dimen/box_size" />

            <ir.jahanmir.aspa.component.PersianTextViewThin
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="36dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="وصل موقت"
                android:minWidth="88dp"
                android:textColor="@color/white"
                android:textSize="@dimen/size_font_very_small" />

            <ImageView
                android:src="@drawable/button_image"
                android:layout_width="@dimen/box_size"
                android:layout_height="@dimen/box_size"
                android:layout_gravity="center"
                android:layout_margin="@dimen/box_size" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
