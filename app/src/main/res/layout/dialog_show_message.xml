<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layMainDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_back_btn_orange"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layCloseDialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCloseDialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:alpha=".5"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:src="@drawable/ic_expand_more_black_24dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ir.jahanmir.araxx.component.PersianTextViewNormal
            android:id="@+id/txtMessageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:minHeight="30dp"
            android:minWidth="70dp"
            android:padding="5dp"
            android:text="پیغام"
            android:textColor="@color/text_color_items"
            android:textSize="@dimen/size_font_very_small"
            android:typeface="serif" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <ir.jahanmir.araxx.component.PersianTextViewNormal
            android:id="@+id/txtMessageDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_color_items"
            android:textSize="@dimen/size_font_small"
            app:fontFile="fonts/biran.ttf" />
    </LinearLayout>

</LinearLayout>
