<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="@dimen/all_padding"
        tools:context="ir.aspacrm.my.app.mahanet.ActivityRegisterForm">

        <include layout="@layout/toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/box_size"
                        android:layout_marginTop="@dimen/box_size"
                        android:layout_marginRight="@dimen/box_size"
                        android:layout_weight="1"
                        android:background="@color/color_back">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/color_back">

                            <Spinner
                                android:id="@+id/spnCities"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/box_size"
                                android:popupBackground="#00afab"

                                android:layout_marginTop="@dimen/box_size"
                                android:layout_weight="1"

                                android:background="@drawable/background_spinner"
                                tools:listitem="@layout/s_item_white" />
                        </FrameLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="@dimen/box_size"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/box_size"
                        android:layout_marginTop="@dimen/box_size"
                        android:layout_weight="1"
                        android:background="@color/color_back">

                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/color_back">

                            <Spinner
                                android:id="@+id/spnRegions"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/box_size"
                                android:layout_marginTop="@dimen/box_size"
                                android:popupBackground="#00afab"

                                android:background="@drawable/background_spinner"
                                tools:listitem="@layout/s_item_white" />
                        </FrameLayout>

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/layCheckPhoneNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/box_size"
                    android:layout_marginBottom="@dimen/box_size"
                    android:layout_marginTop="@dimen/box_size"
                    android:layout_weight="1"
                    android:background="@color/color_back"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/color_back"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ir.jahanmir.araxx.component.PersianTextViewNormal
                            android:id="@+id/edtPrePhoneNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight=".3"
                            android:gravity="center"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:minHeight="35dp"
                            android:textColor="@color/text_color_items"
                            android:textColorHint="@color/light_light_grey"
                            android:textSize="@dimen/size_font_very_very_small" />


                        <ir.jahanmir.araxx.component.CustomEditText
                            android:id="@+id/edtRanzheNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/color_back"
                            android:hint="شماره رانژه"
                            android:imeOptions="actionNext"
                            android:inputType="phone"
                            android:minHeight="35dp"
                            android:paddingLeft="6dp"
                            android:paddingRight="6dp"
                            android:textColor="@color/text_color_items"
                            android:textColorHint="@color/text_color_items"
                            android:textSize="@dimen/size_font_very_very_small" />


                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/box_size"
                    android:layout_marginTop="@dimen/box_size"
                    android:layout_marginLeft="@dimen/box_size"
                    android:background="@color/color_back">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:background="@color/color_back">

                        <Spinner
                            android:id="@+id/snpService"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/box_size"
                            android:layout_weight="1"
                            android:popupBackground="#00afab"

                            android:background="@drawable/background_spinner"
                            tools:listitem="@layout/s_item_white" />
                    </FrameLayout>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layInfoForm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/box_size"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/box_size"
                            android:layout_marginLeft="@dimen/box_size"
                            android:layout_marginTop="@dimen/box_size"
                            android:layout_weight="1"
                            android:background="@color/color_back"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/color_back"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <ir.jahanmir.araxx.component.CustomEditText
                                    android:id="@+id/edtName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/color_back"
                                    android:hint="نام "
                                    android:imeOptions="actionNext"
                                    android:minHeight="35dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="@dimen/box_size"
                                    android:textColor="@color/text_color_items"
                                    android:textColorHint="@color/light_light_grey"
                                    android:textSize="@dimen/size_font_very_very_small" />


                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/box_size"
                            android:layout_marginRight="@dimen/box_size"
                            android:layout_marginTop="@dimen/box_size"
                            android:layout_weight="1"
                            android:background="@color/color_back"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/color_back"
                                android:gravity="center"
                                android:orientation="horizontal">


                                <ir.jahanmir.araxx.component.CustomEditText
                                    android:id="@+id/edtFamilyName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/color_back"
                                    android:hint=" نام خانوادگی"
                                    android:imeOptions="actionNext"
                                    android:minHeight="35dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="@dimen/box_size"
                                    android:textColor="@color/text_color_items"
                                    android:textColorHint="@color/light_light_grey"
                                    android:textSize="@dimen/size_font_very_very_small" />


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/box_size"
                            android:layout_marginRight="@dimen/box_size"
                            android:layout_marginTop="@dimen/box_size"
                            android:layout_weight="1"
                            android:background="@color/color_back"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/white"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ir.jahanmir.araxx.component.PersianTextViewNormal
                                    android:id="@+id/edtPreTelNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight=".3"
                                    android:background="@color/color_back"
                                    android:gravity="center"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:minHeight="35dp"
                                    android:textColor="@color/black"
                                    android:textColorHint="@color/light_light_grey"
                                    android:textSize="@dimen/size_font_very_very_small" />


                                <ir.jahanmir.araxx.component.CustomEditText
                                    android:id="@+id/edtTelNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/color_back"
                                    android:hint="شماره تلفن"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:minHeight="35dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="6dp"
                                    android:textColor="@color/text_color_items"
                                    android:textColorHint="@color/light_light_grey"
                                    android:textSize="@dimen/size_font_very_very_small" />


                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/box_size"
                            android:layout_marginLeft="@dimen/box_size"
                            android:layout_marginTop="@dimen/box_size"
                            android:layout_weight="1"
                            android:background="@color/color_back"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@color/color_back"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ir.jahanmir.araxx.component.CustomEditText
                                    android:id="@+id/edtMobileNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@color/color_back"
                                    android:hint="شماره موبایل"
                                    android:imeOptions="actionNext"
                                    android:inputType="phone"
                                    android:minHeight="35dp"
                                    android:paddingLeft="6dp"
                                    android:paddingRight="@dimen/box_size"
                                    android:textColor="@color/text_color_items"
                                    android:textColorHint="@color/light_light_grey"
                                    android:textSize="@dimen/size_font_very_very_small" />


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>


                    <ir.jahanmir.araxx.component.CustomEditText
                        android:id="@+id/edtAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/box_size"
                        android:background="@color/color_back"
                        android:hint="آدرس"
                        android:imeOptions="actionGo"
                        android:lines="6"
                        android:minHeight="40dp"
                        android:paddingRight="@dimen/box_size"
                        android:textColor="@color/text_color_items"
                        android:textColorHint="@color/light_light_grey"
                        android:textSize="@dimen/size_font_very_very_small" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center">


                    <LinearLayout
                        android:id="@+id/layBtnDone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@color/color_back_btn_orange">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/box_size"
                            android:src="@drawable/button_image" />

                        <ir.jahanmir.araxx.component.PersianTextViewNormal
                            android:id="@+id/txtValue"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:minHeight="36dp"
                            android:minWidth="88dp"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:singleLine="true"
                            android:text="ثبت نام"
                            android:textColor="@color/white"
                            android:typeface="serif" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/box_size"
                            android:src="@drawable/button_image" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <include layout="@layout/lay_back" />

    </LinearLayout>


</FrameLayout>
